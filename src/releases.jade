extends ../layouts/base.jade

block head
  title DC/OS Releases

block content

  .container.container--dark-background
    +header

    .container__content
      h1 Download All The Things!
      p.hero-subtitle DC/OS releases are built from source and hosted by Mesosphere, Inc.

  .container
    .container__content

      .community-hero
        h2 Release Channels
        ul.container__content--hero-list
          li.hero-list__item
            .hero-list__item__copy
              h5.hero-list__item__copy__title Stable
              p.hero-list__item__copy__paragraph Latest stable release. Ready for production use.
              a.cta.cta--text(href='/releases/1.7.0/') 1.7.0 &rarr;

          li.hero-list__item
            .hero-list__item__copy
              h5.hero-list__item__copy__title Early Access
              p.hero-list__item__copy__paragraph Upcoming release. Ready for development and testing.
              a.cta.cta--text(href='/releases/1.7.1/') 1.7.1 &rarr;

          li.hero-list__item
            .hero-list__item__copy
              h5.hero-list__item__copy__title Master
              p.hero-list__item__copy__paragraph Bleeding edge automated release. Only tested with automated tests.
              a.cta.cta--text(href='/releases/1.7.0/') 1.7.1++ &rarr;

      h2 Release Versions
      table.releases
        thead
          tr
            th Version
            th Download
            th Release Notes
            th Documentation
        tbody
          tr
            td
              a.cta.cta--text(href='https://github.com/mesosphere/dcos-image/tree/CM.7') 1.7.0
            td
              a.cta.cta--text(href='https://downloads.mesosphere.com/dcos/testing/CM.7/dcos_generate_config.sh') dcos_generate_config-1.7.0.sh
            td
              a.cta.cta--text(href='/releases/1.7.0/') /releases/1.7.0/
            td
              a.cta.cta--text(href='/docs/1.7/') /docs/1.7/

  .container.container--dark-background
    .container__content
       h2 Install on any virtual or physical machines
       a(href='/documentation/installing/').cta.cta--button Install

    +footer

extends base-whitefooter.jade

block head
  title #{title} | The Definitive Platform for Modern Apps | DC/OS
  meta(property='og:locale', content='en_US')
  meta(property='og:type', content='article')
  meta(property='og:title', content='#{title} | DC/OS')
  meta(property='og:image', content='https://dcos.io/assets/images/social-img.png')
  meta(property='og:description', content='${description}')
  meta(property='og:url', content='https://dcos.io/')
  meta(property='og:site_name', content='DC/OS')
  meta(name='twitter:card', content='summary')
  meta(name='twitter:site', content='@dcos')
  meta(name='twitter:title', content='#{title}')
  meta(name='twitter:card', content='summary_large_image')
  meta(name='twitter:image', content='https://dcos.io/assets/images/social-img.png')
  meta(name='twitter:description', content='#{description}')

block content
  .container.container--blog-header
    +header

    .container__content
      .blog__category
        a(href='/blog?category=#{category}')!= category[0].toUpperCase()
      //- .blog__divider
      h2!= title

  .container
    .container__content.blog-article-wrapper
      .post-meta
        .post-meta__author!= author
        .post-meta__date= moment(date).format("MMM Do, YYYY")
        .post-divider

      article.post-content.blog-article!= contents

      .blog__article-footer
        a(href="http://twitter.com/share?text=#{encodeURIComponent(title)}&url=#{rootUrl}/#{path}", target="_blank").blog__social-share
          img(src='/assets/images/icons/twitter-icon.svg')
          p Tweet

        a(href="https://www.facebook.com/sharer/sharer.php?u=#{rootUrl}/#{path}", target="_blank").blog__social-share
          img(src='/assets/images/icons/facebook-icon.svg')
          p Share

        a(href="https://plus.google.com/share?url=#{rootUrl}/#{path}", target="_blank").blog__social-share
          img(src='/assets/images/icons/googleplus-icon.svg')
          p Share

        a(href="http://news.ycombinator.com/submit", target="_blank").blog__social-share
          img(src='/assets/images/icons/hackernews-icon.svg')
          p Vote

  .container
    +footer

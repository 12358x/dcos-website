include ../mixins/header-docs.jade
include ../mixins/footer-docs.jade

<!doctype html>
html
  head
    link(rel='stylesheet', type='text/css', href='/styles/index.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="shortcut icon" type="image/x-icon" href="/assets/images/icons/favicon.ico")
    
    block head
      title!= title
      
  body
    block content
      .container.container--docs-header
        +header
        
      .container
        .container__content.docs-layout
          .docs-layout__docs-nav
            script.
              console.log(!{locals.navs.header})
            each n in locals.navs.header
              if(n.file)
                p= n.file.post_title
                
                if(n.children)
                  each c in n.children
                    if(c.file)
                      p= c.file.post_title
              
            ul
              li.docs-nav__item
                a Installing
                ul
                  li.docs-nav__item__child
                    a Let's go
                  li.docs-nav__item__child
                    a Let's go
                  li.docs-nav__item__child
                    a Let's go
              li.docs-nav__item
                a First run
              li.docs-nav__item
                a First run
                ul
                  li.docs-nav__item__child
                    a Let's go
                  li.docs-nav__item__child
                    a Let's go
                  li.docs-nav__item__child
                    a Let's go
              li.docs-nav__item
                a First run

          .docs-layout__docs-content
            article!= contents
          
            .docs-content__footer
              ul.docs-content__footer__actions
                li.docs-content__footer__action
                  img.docs-content__footer__share-icon(src='/assets/images/icons/share.svg')
                  a Share

              ul.docs-content__footer__actions
                li.docs-content__footer__action
                  img.docs-content__footer__feedback-icon(src='/assets/images/icons/feedback.svg')
                  a Submit feedback
                
      .container
        +footer

  script(src='/scripts/main.js')
  block scripts
